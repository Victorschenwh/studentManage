<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dbsy.student.mapper.MajorMapper">
    <resultMap id="BaseResultMap" type="com.dbsy.student.pojo.Major">
        <constructor>
            <arg column="id" javaType="java.lang.Integer" jdbcType="INTEGER"/>
            <arg column="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="introduce" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="department_id" javaType="java.lang.Integer" jdbcType="INTEGER"/>
        </constructor>
    </resultMap>
    <insert id="insert" parameterType="com.dbsy.student.pojo.Major" useGeneratedKeys="true"
            keyProperty="id">
    insert into major (id, name, introduce, 
      department_id)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{introduce,jdbcType=VARCHAR}, 
      #{departmentId,jdbcType=INTEGER})
  </insert>
    <insert id="insertSelective" parameterType="com.dbsy.student.pojo.Major" useGeneratedKeys="true"
            keyProperty="id">
        insert into major
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="introduce != null">
                introduce,
            </if>
            <if test="departmentId != null">
                department_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="introduce != null">
                #{introduce,jdbcType=VARCHAR},
            </if>
            <if test="departmentId != null">
                #{departmentId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <select id="list" resultType="com.dbsy.student.pojo.Major">
        select * from major
        <where>
            <if test="name != null">
                or name like concat('%',#{name},'%')
            </if>
        </where>
        <if test="page!=null and pageSize != null">
            limit (#{page}-1)* #{pageSize},#{pageSize}
        </if>
    </select>

    <select id="listCount" resultType="int">
        select count(*) from major
        <where>
            <if test="name != null">
                or name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <delete id="batchRemove">
        delete from major where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>