    <select id="getByFOREIGN_KEY" resultType="com.dbsy.student.pojo.Clazz">
        select * from clazz
        <where>
            <if test="departmentId != null">
                and department_id=#{departmentId}
            </if>
            <if test="majorId != null">
                and major_id = #{majorId}
            </if>
            <if test="grade !=null and grade != 0">
                and grade = #{grade}
            </if>
        </where>
    </select>

    <select id="list" resultType="com.dbsy.student.pojo.Clazz">
        select * from clazz
        <where>
            <if test="name != null">
                or name like concat('%',#{name},'%')
            </if>
        </where>
        <if test="page!=null and pageSize != null">
            limit (#{page}-1)* #{pageSize},#{pageSize}
        </if>
    </select>

    <select id="listCount" resultType="int">
        select count(*) from clazz
        <where>
            <if test="name != null">
                or name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
    <delete id="batchRemove">
        delete from clazz where id in
        <foreach close=")" collection="array" item="id" open="(" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>